
TS="$(date +%y%m%d%H%M%S)"
Z_DIR="/tmp/$TS"
mkdir -p $Z_DIR
echo "Z_DIR=$Z_DIR"
cp z $Z_DIR
cp weathervane.config.k8s.quickstart $Z_DIR
cp *.yaml $Z_DIR
cp runWeathervane.pl $Z_DIR


kubectl delete pvc --namespace auctionw1i1 cassandra-data-cassandra-0
kubectl delete pvc --namespace auctionw1i1 postgresql-postgresql-0
